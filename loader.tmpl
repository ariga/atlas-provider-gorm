package main

import (
  	"io"
	"fmt"
	"os"

	{{- range .Imports }}
		"{{ . }}"
	{{- end}}
	"ariga.io/atlas-provider-gorm/gormschema"
	"gorm.io/gorm"
	"gorm.io/gorm/schema"
	_ "ariga.io/atlas-go-sdk/recordriver"
)

func main() {
	var options []gormschema.Option

	{{- if .Singular }}
	config := &gorm.Config{
		NamingStrategy: schema.NamingStrategy{
			SingularTable: true, // Use singular table names
		},
	}
	options = append(options, gormschema.WithConfig(config))
	{{- end }}

	stmts, err := gormschema.New("{{ .Dialect }}", options...).Load(
		{{- range .Models }}
			&{{ .PkgName }}.{{ .Name }}{},
		{{- end }}
	)
	if err != nil {
		fmt.Fprintf(os.Stderr, "failed to load gorm schema: %v\n", err)
		os.Exit(1)
	}
	io.WriteString(os.Stdout, stmts)
}
